package Tema6;

public class Tresenraya {

	public Tresenraya() {
		
	}
	public class Juego {
		static int partida = 1;
		String[][] tablero = new String[3][3];

		public Juego() {
			for (int i = 0; i < tablero[0].length; ++i) {
				for (int j = 0; j < tablero.length; ++j) {
					tablero[i][j] = " ";
				}
			}
			++partida;
			Tablero();
		}

		public void Turno(int a, int b) {
			int u = 1;
			if (u % 2 == 0) {
				tablero[a][b] = "X";
			} else
				tablero[a][b] = "O";
			Tablero();
		}

		public void Tablero() {
			for (int i = 0; i < tablero[0].length; ++i) {
				for (int j = 0; j < tablero.length; ++j) {
					System.out.print(tablero[i][j]);
					if (j < 2)
						System.out.print("|");
				}
				if (i < 2) {
					System.out.println();
					System.out.println("______");
					System.out.println();
				}
			}

		}
	}
}
