package tema52;

import java.util.Scanner;

public class Trabajador {
	static Trabajador tra = new Trabajador();
	int id,tit,años;
	String nombre;
	boolean ec,turno;
	public int gId () {
		return id;
	}
	public void sId(int id) {
		this.id=id;
	}
	public int gTit() {
		return tit;
	}
	public void sTit(int tit) {
		this.tit=tit;
	}
	public int gAños() {
		return años;
	}
	public void sAños(int años) {
		this.años=años;
	}
	public String gNombre() {
		return nombre;
	}
	public void sNombre(String nombre) {
		this.nombre=nombre;
	}
	public boolean gEc() {
		return ec;
	}
	public void sEc(boolean ec) {
		this.ec=ec;
	}
	public boolean gTurno() {
		return turno;
	}
	public void sTurno(boolean turno) {
		this.turno=turno;
	}
	public static void NuevoTrabajador() {
		Scanner teclado = new Scanner(System.in);
		String n;
		int m;
		m=teclado.nextInt();
		tra.sId(m);
		m=teclado.nextInt();
		tra.sTit(m);
		m=teclado.nextInt();
		tra.sAños(m);
		n= teclado.next();
		tra.sNombre(n);
		n=teclado.next();
		tra.sEc(n.equals("S"));
		n=teclado.next();
		tra.sTurno(n.equals("D"));
	}
	public static void ModTrabajador() {
		Scanner tec = new Scanner(System.in);
		System.out.println("Que campo deseas modificar? ");
		String opc=tec.nextLine();
		String campo="Titulo Años Nombre Estadocivil Turno";
		switch (campo.indexOf(opc)){
		case 0: tra.sTit(tec.nextInt());break;
		case 7: tra.sAños(tec.nextInt());break;
		case 12: tra.sNombre(tec.nextLine());break;
		case 19: tra.sEc(tec.next().equals("S"));break;
		case 31: tra.sTurno(tec.next().equals("D"));break;
		default: System.out.println("no es valido este campo");
		}
	}
	public void VerTrabajador() {
		String ec;
		if(tra.ec==true)ec="Soltero";
		else ec="Casado";
		String turno;
		if(tra.ec==true)turno="Diurno";
		else turno="Nocturno";
		System.out.println("Identificador: "+tra.id+" Nombre: "+tra.nombre+" Titulacion: "+tra.tit+" Años en la empresa: "+tra.años+" Estado civil: "+ec+" Turno: "+turno);
	}
	public void Salario() {
		System.out.println();
	}
}
