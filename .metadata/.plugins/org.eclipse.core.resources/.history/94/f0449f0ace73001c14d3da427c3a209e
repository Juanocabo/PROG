package tema52;

import java.util.Scanner;

public class CuentaCorriente {
	static Scanner tec = new Scanner(System.in);
	static CuentaCorriente ope=new CuentaCorriente();
private String titular,codigo;
private float saldo;
public String getTitular() {
	return titular;
}
public void setTitular(String titular) {
	this.titular = titular;
}
public float getSaldo() {
	return saldo;
}
public void setSaldo(float saldo) {
	this.saldo = saldo;
}
public String getCodigo() {
	return codigo;
}
public void setCodigo(String codigo) {
	this.codigo = codigo;
}
public static void IngresarDinero() {
	
	System.out.println("Dinero que desea ingresar: ");
	float m=tec.nextFloat();
	ope.setSaldo(ope.saldo+m);
}
public static void RetiraDinero() {
	System.out.println("Cantidad que desea retirar de su cuenta: ");
	float m=tec.nextFloat();
	if(PuedoSacar(m))ope.setSaldo(ope.saldo-m);
	else System.out.println("La cuenta no posee suficientes fondos para retirar esa cantidad, porfavor pulse return");
	tec.nextLine();
}
public static boolean PuedoSacar(float m) {
	if (ope.saldo>=m)return true;
	else return false;
}
}
